{
  "name": "@openweave/weave-provider-sqlite",
  "version": "0.8.0",
  "description": "SQLite provider for OpenWeave — embedded, zero-deps via Node.js built-in node:sqlite (requires Node ≥ 22.5)",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "prepack": "tsc",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "clean": "rm -rf dist"
  },
  "keywords": ["openweave", "sqlite", "provider", "storage"],
  "devDependencies": {
    "@types/node": "22.10.2",
    "typescript": "5.7.2",
    "vitest": "3.0.0"
  },
  "dependencies": {
    "@openweave/weave-provider": "workspace:*"
  },
  "engines": {
    "node": ">=22.5.0"
  }
}
